#include<stdio.h>
int main() {
	int n,i;
	int sum=0;
	printf("Enter the n i.e. max values of series: ");
	scanf("%d",&n);
	sum = (2*n * (n + 1) * (2 * n + 1 )) /3 ;
	printf("Sum of the series : ");
	for (i =1;i<=n;i++) {
		if (i != n)
		             printf("%d^2 + ",i); else
		             printf("sum of square = %d ",sum);
	}
	return 0;
}
